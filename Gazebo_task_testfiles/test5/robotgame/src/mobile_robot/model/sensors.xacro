<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="sensors">
  <!-- Lidar Sensor -->
    <link name="lidar_link">
      <pose>0.0 0.0 0.3 0 0 0</pose>  <!-- Adjusted position -->
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.1"/>
        </geometry>
        <material name="red">
          <color rgba="1.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <sensor type="ray" name="lidar">
        <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <remapping>scan:=/scan</remapping>
          </ros>
        </plugin>
      </sensor>
    </link>
    <joint name="lidar_joint" type="fixed">
      <parent link="base_link"/>
      <child link="lidar_link"/>
      <origin xyz="0.0 0.0 0.3"/>
    </joint>

  <!-- IMU Sensor -->
    <link name="imu_link">
      <pose>0.0 0.0 0.15 0 0 0</pose>  <!-- Adjusted position -->
      <visual>
        <geometry>
          <box size="0.05 0.05 0.02"/>
        </geometry>
        <material name="green">
          <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
      </visual>
      <sensor type="imu" name="imu">
        <plugin name="gazebo_ros_imu" filename="libgazebo_ros_imu_sensor.so">
          <ros>
            <remapping>imu/data:=/imu</remapping>
          </ros>
        </plugin>
      </sensor>
    </link>
    <joint name="imu_joint" type="fixed">
      <parent link="base_link"/>
      <child link="imu_link"/>
      <origin xyz="0.0 0.0 0.15"/>
    </joint>


  <!-- GPS Sensor -->
    <link name="gps_link">
      <pose>-0.15 0.0 0.35 0 0 0</pose>  <!-- Adjusted position -->
      <visual>
        <geometry>
          <sphere radius="0.03"/>
        </geometry>
        <material name="blue">
          <color rgba="0.0 0.0 1.0 1.0"/>
        </material>
      </visual>
      <sensor type="gps" name="gps">
        <plugin name="gazebo_ros_gps" filename="libgazebo_ros_gps_sensor.so">
          <ros>
            <remapping>fix:=/gps</remapping>
          </ros>
        </plugin>
      </sensor>
    </link>
    <joint name="gps_joint" type="fixed">
      <parent link="base_link"/>
      <child link="gps_link"/>
      <origin xyz="-0.15 0.0 0.35"/>
    </joint>

  <!-- Camera Sensor -->
    <link name="camera_link">
      <pose>0.2 0.0 0.25 0 0 0</pose>  <!-- Adjusted position -->
      <visual>
        <geometry>
          <box size="0.07 0.03 0.03"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <sensor type="camera" name="camera">
        <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>image_raw:=/camera/image_raw</remapping>
          </ros>
        </plugin>
      </sensor>
    </link>
    <joint name="camera_joint" type="fixed">
      <parent link="base_link"/>
      <child link="camera_link"/>
      <origin xyz="0.2 0.0 0.25"/>
    </joint>
    
  </xacro:macro>


</robot>

